root = true

[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.csproj, *.targets, *.props}]
charset = utf-8
indent_style = space
indent_size = 2

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4

[*.cshtml]
charset = utf-8
indent_style = space
indent_size = 2

[*.ps1]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
